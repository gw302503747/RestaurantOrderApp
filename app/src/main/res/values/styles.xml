<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RestaurantOrderApp" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RestaurantOrderApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RestaurantOrderApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RestaurantOrderApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">34sp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- 自定义 TabLayout 样式 -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <!-- 自定义按钮样式 -->
    <style name="BlackButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_black_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 自定义按钮条样式 -->
    <style name="CustomButtonBarStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <!-- 可以根据需要添加自定义样式 -->
    </style>

</resources>